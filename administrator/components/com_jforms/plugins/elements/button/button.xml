<JFormPlugin type='element' limit='0' group='basic'>
<name>button</name>
<description>BUTTONPLUGINDESCRIPTION</description>
<files>
	<file type='jsEntryPoint'>button.js</file>
	<file type='phpEntryPoint'>button.php</file>
	<file type='icon'>button.png</file>
</files>
<parameters>
	<param name="label" label="Label" control="textbox" default='Submit' valueType='string' translate='1'></param>
	<param name="css" label="CSS Class" control="textbox" default='jfbutton' valueType='string' translate='0' />
	<param name="clickTrigger" label="onClick script" control="textarea" default='' valueType='string'  translate='0'></param>
	<param name="func" control="list" label="Type" default='Submit' valueType='string'  translate='0'>
		<option value='Submit'>Submit</option>
		<option value='Reset'>Reset</option>
		<option value='Button'>Button</option>
	</param>
	<param name="ch" control="none" valueType='integer' default='25'  translate='0' />
	<param name="cw" control="none" valueType='integer' default='70'  translate='0' />
	<param name="hash" control="none" valueType='string' default=''  translate='0' />
		
</parameters>
</JFormPlugin>