<JFormPlugin type='element' limit='0' group='basic'>
<name>textarea</name>
<description>TEXTAREAPLUGINDESCRIPTION</description>
<files>
	<file type='jsEntryPoint'>textarea.js</file>
	<file type='phpEntryPoint'>textarea.php</file>
	<file type='icon'>textarea.png</file>
</files>
<parameters>
	<param name="label" label="Label" control="textbox" default='Textarea' valueType='string' translate='1' />
	<param name="css" label="CSS Class" control="textbox" default='jftextarea' valueType='string' translate='0' />
	<param name="required" label="Required" control="checkbox" default='0' valueType='integer' translate='0' />
	
	<param name="minLength" label="Minimum length" control="textbox" default='10' valueType='integer' translate='0' />
	<param name="maxLength" label="Maximum length" control="textbox" default='500' valueType='integer' translate='0' />

	<param name="lh" control="none" valueType='integer' default='16' translate='0' />
	<param name="lw" control="none" valueType='integer' default='70' translate='0' />
	<param name="ch" control="none" valueType='integer' default='150' translate='0' />
	<param name="cw" control="none" valueType='integer' default='200' translate='0' />
	<param name="hash" control="none" valueType='string' default='' translate='0' />
	<param name="defaultValue" control="none" valueType='string' default='' translate='1' />

</parameters>
<storage type='textfield' size='10000' requirefs='false' />
</JFormPlugin>